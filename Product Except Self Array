/*
*This function will calculate the product of the all element except current element in an array and replace current element with product.
*/

#include <iostream>
#include <vector>
using namespace std;

std::vector<int> ProductExcept(std::vector<int> nums)
{
    cout << "Given array is " << endl;
    for(auto& item : nums)
        cout << item << " ";
    cout << endl;
    std::vector<int> ans;
    ans.resize(nums.size(),1);
    
    ans[0] = 1;
    for(int i =1; i < nums.size(); i++)
    {
        ans[i] = ans[i-1] * nums[i-1];
    }
    
    int fromRight = 1;
    for(int i = nums.size()-2; i >= 0; i--)
    {
        fromRight = fromRight * nums[i+1];
        ans[i] = ans[i] * fromRight;
    }
    return ans;
    
}
int main()
{
    std::vector<int> arr = {1, 2, 3, 4, 5};
    std::vector<int> ans = ProductExcept(arr);
    cout << "After Product of all Except self " << endl;
    for(auto& item : ans)
        cout << item << " ";
    cout << endl;
    return 0;
}
